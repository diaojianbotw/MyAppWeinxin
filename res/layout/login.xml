<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#F0F0F0">
    <include layout="@layout/title"/>

    <RelativeLayout 
        android:background="#4A4A4A"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <Button 
            android:id="@+id/login_reback_btn"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#fff"
            android:background="@drawable/title_btn_back"
            android:onClick="clickBack"
            android:text="返回"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="20dp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    
    <EditText 
        android:id="@+id/login_user_edit"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_editorbox"
        android:hint="QQ号/微信号/(请输入weixin)"
        />
    
      <EditText 
        android:id="@+id/login_passwd_edit"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_editorbox"
        android:hint="密码/(请输入123)"
        />
      
      <RelativeLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          >
          <Button 
              android:id="@+id/forget_passwd"
              android:layout_marginTop="15dp"
		      android:layout_marginLeft="23dp"
		      android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:text="忘记密码"
		      android:textColor="#00FA9A"
		      android:background="#0000"
		      android:onClick="forget"
              />
          <Button 
              android:id="@+id/login_login_btn"
              android:layout_alignParentRight="true"
              android:layout_width="60dp"
              android:layout_height="40dp"
		      android:layout_marginRight="23dp"
		      android:textColor="#ffffff"
		       android:background="@drawable/btn_style_green"
		      android:text="登录"
		      android:onClick="clickLogin"
              />
      </RelativeLayout>
</LinearLayout>
